<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xử lý Kết quả"
        android:textColor="#00796B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNhanA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận A:"
        android:textColor="#E91E63"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2" />

    <EditText
        android:id="@+id/edtAA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNhanA"
        app:layout_constraintTop_toTopOf="@id/tvNhanA"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvNhanB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận B:"
        android:textColor="#E91E63"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtAA" />

    <EditText
        android:id="@+id/edtBB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNhanB"
        app:layout_constraintTop_toTopOf="@id/tvNhanB"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnTong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#8000FF"
        android:text="TRẢ VỀ TỔNG"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btnHieu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBB" />

    <Button
        android:id="@+id/btnHieu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#8000FF"
        android:text="TRẢ VỀ HIỆU"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTong"
        app:layout_constraintTop_toTopOf="@id/btnTong" />

</androidx.constraintlayout.widget.ConstraintLayout>
